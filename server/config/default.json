{
  "logging": {
    "logLevel": "info",
    "console": true,
    "gcloud": false,
    "file": false
  },
  "firestore": {
    "host": "localhost",
    "port": 1865,
    "projectId": "autoreceipt",
    "ssl": false
  },
  "pubsub": {
    "client": {
      "apiEndpoint": "http://localhost:1866",
      "projectId": "autoreceipt"
    },
    "createSubscriptions": false,
    "pushEndpointBase": "",
    "topics": {
      "pdf": "pdf-generation",
      "bulkImport": "bulk-import",
      "email": "send-email"
    },
    "subscriptions": {
      "pdf": {
        "topic": "pdf-generation",
        "name": "pdf-gen",
        "endpoint": "/pubsub/pdf",
        "retryOnFail": false
      },
      "bulkImport": {
        "topic": "bulk-import",
        "name": "bulk-import",
        "endpoint": "/pubsub/bulk-import",
        "retryOnFail": false
      },
      "email": {
        "topic": "send-email",
        "name": "send-email",
        "endpoint": "/pubsub/email",
        "retryOnFail": false
      }
    }
  },
  "paypal": {
    "validateIpn": true,
    "ipnUrl": "https://ipnpb.sandbox.paypal.com/cgi-bin/webscr"
  },
  "locales": [
    { "locale": "fr-CA", "test": "janvier" },
    { "locale": "en-CA", "test": "january" }
  ],
  "chromium": {
    "maxInstances": 15
  },
  "providers": {
    "file": {
      "provider": "file-system",
      "fs": {
        "translationsPath": "./translations",
        "templatePath": "./templates",
        "documentPath": "./temp-docs",
        "tempPath": "./temp"
      }
    },
    "email": {
      "provider": "smtp",
      "smtp": {
        "host": "localhost",
        "port": 6025,
        "secure": false,
        "authUsername": "user",
        "authPassword": "pass",
        "from": "noreply@example.com",
        "replyTo": "noreply@example.com"
      }
    },
    "authentication": {
      "provider": "no-auth",
      "unauthorizedStatusCode": 401
    }
  },
  "cors": {
    "enabled": true,
    "allowedOrigins": ["http://localhost:3000"]
  },
  "correspondence": {
    "enabled": true,
    "no-mailing-addr": {
      "subject": "[TEST] Merci de votre don / Thank you for your donation"
    },
    "reminder-mailing-addr": {
      "subject": "[TEST][RAPPEL / REMINDER] Merci de votre don / Thank you for your donation"
    },
    "thank-you": {
      "subject": "[TEST] Votre re√ßu pour votre don / Your donation receipt"
    }
  }
}
